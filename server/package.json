{
  "name": "notificacao",
  "version": "1.0.1-propose",
  "description": "",
  "author": "pLinho<paulorettamozo@gmail.com>",
  "private": true,
  "license": "MIT",
  "scripts": {
    "build": "node node_modules/@nestjs/cli/bin/nest  build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\" \"libs/**/*.ts\"",
    "start": "nest start",
    "start:dev": "node node_modules/@nestjs/cli/bin/nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json"
  },
  "dependencies": {
    "@nestjs/common": "^10.0.0",
    "@nestjs/core": "^10.0.0",
    "@nestjs/jwt": "^10.1.0",
    "@nestjs/passport": "^10.0.1",
    "@nestjs/platform-express": "^10.0.0",
    "@nestjs/swagger": "^7.1.8",
    "@nestjs/typeorm": "^10.0.0",
    "argon2": "^0.31.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "hbs": "^4.2.0",
    "html": "^1.0.0",
    "passport-jwt": "^4.0.1",
    "pg": "^8.11.3",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^5.0.1",
    "rxjs": "^7.8.1",
    "typeorm": "^0.3.17"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.0.0",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/testing": "^10.0.0",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.2",
    "@types/node": "^20.3.1",
    "@types/passport-jwt": "^3.0.9",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.59.11",
    "@typescript-eslint/parser": "^5.59.11",
    "audic": "^3.0.2",
    "dotenv": "^16.3.1",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "firebase": "^10.8.0",
    "jest": "^29.5.0",
    "prettier": "^2.8.8",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typeorm-naming-strategies": "^4.1.0",
    "typescript": "^5.1.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/src/",
      "<rootDir>/libs/"
    ],
    "moduleNameMapper": {
      "^@ci/seo-marketing(|/.*)$": "<rootDir>/libs/seo-marketing/src/$1",
      "^@ci/core(|/.*)$": "<rootDir>/libs/core/src/$1",
      "^@ci/manager(|/.*)$": "<rootDir>/libs/manager/src/$1",
      "^@ci/tenant(|/.*)$": "<rootDir>/libs/tenant/src/$1",
      "^@ci/auth(|/.*)$": "<rootDir>/libs/auth/src/$1",
      "^@ci/cadastro(|/.*)$": "<rootDir>/libs/cadastro/src/$1",
      "^@ci/cms(|/.*)$": "<rootDir>/libs/cms/src/$1",
      "^@ci/codex(|/.*)$": "<rootDir>/libs/codex/src/$1",
      "^@ci/espazio(|/.*)$": "<rootDir>/libs/espazio/src/$1",
      "^@ci/farmacia(|/.*)$": "<rootDir>/libs/farmacia/src/$1",
      "^@ci/financeiro(|/.*)$": "<rootDir>/libs/financeiro/src/$1",
      "^@ci/estoque(|/.*)$": "<rootDir>/libs/estoque/src/$1",
      "^@ci/fiscal(|/.*)$": "<rootDir>/libs/fiscal/src/$1",
      "^@ci/g11n(|/.*)$": "<rootDir>/libs/g11n/src/$1",
      "^@ci/icons(|/.*)$": "<rootDir>/libs/icons/src/$1",
      "^@ci/inpi(|/.*)$": "<rootDir>/libs/inpi/src/$1",
      "^@ci/messager(|/.*)$": "<rootDir>/libs/messager/src/$1",
      "^@ci/notification(|/.*)$": "<rootDir>/libs/notification/src/$1",
      "^@ci/payment(|/.*)$": "<rootDir>/libs/payment/src/$1",
      "^@ci/user(|/.*)$": "<rootDir>/libs/user/src/$1",
      "^@ci/organizacao(|/.*)$": "<rootDir>/libs/organizacao/src/$1",
      "^@ci/produto(|/.*)$": "<rootDir>/libs/produto/src/$1",
      "^@ci/prancheta(|/.*)$": "<rootDir>/libs/prancheta/src/$1"
    }
  }
}